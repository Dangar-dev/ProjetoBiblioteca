@model ProjetoBiblioteca.Models.Livros

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Novo Livro";
}

<h2>Novo Livro</h2>

<form asp-action="Criar" method="post">
	@Html.AntiForgeryToken()
	<div>
		<label>Título</label>
		<input asp-for="Titulo" required />

	</div>
	<div>
		<label>Autor</label>
		<select asp-for="AutorId" asp-items="Model.Autores">
			<option value="">(Selecione)</option>
		</select>
	</div>
	<div>
		<label>Editora</label>
		<select asp-for="EditoraId" asp-items="Model.Editoras">
			<option value="">(Selecione)</option>
		</select>
	</div>
	<div>
		<label>Genero</label>
		<select asp-for="GeneroId" asp-items="Model.Generos">
			<option value="">(Selecione)</option>
		</select>
	</div>
	<div>
		<label>Ano</label>
		<input asp-for="Ano" type="number" />
	</div>
	<div>
		<label>ISBN</label>
		<input asp-for="Isbn" />
	</div>
	<div>
		<label>Quantidade total</label>
		<input asp-for="QuantidadeTotal" type="number" min="1" value="1" required />
	</div>

	<button type="submit">Salvar</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
	<div style="color:red">
		@foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
		{ <div>@e.ErrorMessage</div>}
	</div>
}